@model IEnumerable<Employees.ViewModels.EmployerViewModel>

@{
    ViewData["Title"] = "Employees Index";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a class="btn btn-primary" asp-action="Create">
        <i class="fas fa-plus-circle"></i> Create New
    </a>
</p>

<div class="row">
    
    @foreach (var item in Model)
    {
        @if(item.IsAvailable){
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-text">
                        <strong>Description: </strong>@Html.DisplayFor(modelItem => item.Description) <br />
                        <strong>Adresa: </strong>@Html.DisplayFor(modelItem => item.Adresa) <br />
                        <strong>Email: </strong>@Html.DisplayFor(modelItem => item.Email) <br />
                        <strong>Phone: </strong>@Html.DisplayFor(modelItem => item.PhoneNumber)
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.Id">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                            <a class="btn btn-outline-success" asp-controller="Reservation" asp-action="Create" asp-route-employerId="@item.Id">
                                <i class="fas fa-trash"></i> Rezervo
                            </a>
                            @{
                                if (!item.IsFavourite)
                                {
                                    <a class="btn btn-light" asp-controller="Employer" asp-action="ToggleEmployer" asp-route-id="@item.Id">Shto</a>  
                                }
                                else
                                {
                                    <a class="btn btn-light" asp-controller="Employer" asp-action="ToggleEmployer" asp-route-id="@item.Id">Hiq</a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    }
</div>

<script>
    function addToFavorite(id) {
        alert("Item " + id + " added to favorites!");
        // Këtu mund të shtosh logjikë për të ruajtur në databazë ose lokalisht
    }
</script>
